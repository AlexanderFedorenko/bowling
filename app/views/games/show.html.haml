.extended-mixtapes-header
  %h3
    Current Game

%section
  .submit-container
    = form_for @throw do |f|
      = f.hidden_field :frame_id, value: @game.current_frame.id
      = f.number_field :pins, placeholder: 'Knocked pins'
      = f.submit 'Submit Throw'

- if flash[:errors]
  .extended-mixtapes-header
    - flash[:errors].each do |error|
      %h3
        = error

.extended-mixtapes-header
  %h3
    Scores

%table.score-table.table.table-condensed.text-center
  %thead
